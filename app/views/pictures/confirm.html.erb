<h1>確認画面</h1>
<%= form_with(model: @picture, url: pictures_path, local: true) do |f| %>
  <%= image_tag(@picture.image.url) %>
  <%= f.hidden_field :image_cache %>
  <%= f.hidden_field :comment %>
  <p>コメント<%= @picture.comment %></p>
  <%= f.submit "投稿する" %>
<% end %>
<%= form_with(model: @picture, url: new_picture_path, local: true, method: "get") do |f| %>
  <%= f.hidden_field :image_cache %>
  <%= f.hidden_field :comment %>
  <%= f.submit "戻る" %>
<% end %>
