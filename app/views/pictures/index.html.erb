<p id="notice"><%= notice %></p>
<h1>Pictures</h1>
<table>
  <thead>
    <tr>
      <td>User</td>
      <td>User_Image</td>
      <th>Image</th>
      <th>comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.user.user_name %></td>
        <% if @user.my_image.url && @user.my_image %>
          <%= image_tag @user.my_image.url %>
        <% else %>
          <% image_tag "default.png" %>
        <% end %>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.comment %></td>
        <td><%= link_to 'Show', picture %></td>
        <% if picture.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
          <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Picture', new_picture_path %>
